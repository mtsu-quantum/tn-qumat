{{ define "main" }}
<section class="max-w-5xl mx-auto px-4">
  <header class="mb-10 text-center">
    <h1 class="text-4xl font-bold mb-3">{{ .Title }}</h1>
    {{ with .Params.description }}
      <p class="text-lg text-gray-600 dark:text-gray-300">{{ . }}</p>
    {{ end }}
  </header>

  <div class="grid gap-8 md:grid-cols-2">
    {{ range .Pages }}
      <article class="p-6 border rounded-xl shadow-sm bg-white dark:bg-gray-800 hover:shadow-lg transition">
        <h2 class="text-2xl font-semibold mb-2">
          <a href="{{ .RelPermalink }}" class="hover:underline">{{ .Title }}</a>
        </h2>
        {{ with .Params.date }}
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
            {{ . | time.Format "January 2, 2006" }}
          </p>
        {{ end }}
        <p class="mb-4">{{ .Summary }}</p>
        <a href="{{ .RelPermalink }}" class="text-blue-600 dark:text-blue-400 hover:underline">Read more â†’</a>
      </article>
    {{ end }}
  </div>
</section>
{{ end }}

